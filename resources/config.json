{
    "Java": {
        "extensions": [".java"],
		"analyzer": "C",
        "syntax": [ ["//"],
                    [["/*", "*/"]],
                    [["\"", "\""]],
                    [] 
                  ]
    },
	"C/C++ Header": {
        "extensions": [".h"],
